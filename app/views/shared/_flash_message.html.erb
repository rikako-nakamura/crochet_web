<% flash.each do |message_type, message| %>
  <% if message_type == 'success' %>
    <div class="bg-green-100 border border-green-400 text-green-700 font-body px-4 py-3 mt-16 rounded relative">
      <svg aria-hidden="true" class="inline flex-shrink-0 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
      <strong class="font-bold"><%= message %></strong>
    </div>
  <% elsif message_type == 'info' %>
    <div class="text-gray-700 bg-gray-200 dark:bg-gray-700 dark:text-gray-300 font-body px-4 py-3 mt-16 rounded relative">
      <svg aria-hidden="true" class="inline flex-shrink-0 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
      <strong class="font-bold"><%= message %></strong>
    </div>
  <% elsif message_type == 'danger' %>
    <div class="flex text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800 font-body px-4 py-3 mt-16 rounded relative">
      <svg aria-hidden="true" class="inline flex-shrink-0 mr-3 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
      <span class="sr-only">Info</span>
      <strong class="font-bold"><%= message %></strong>
    </div>
  <% elsif message_type == 'warning' %>
    <div class="text-yellow-700 bg-yellow-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% else %>
    <div class="text-blue-700 bg-blue-100 rounded-lg p-4 mb-4"><%= message %></div>
  <% end %>
<% end %>
