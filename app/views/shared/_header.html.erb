<header class=" header bg-green-200 text-gray-600 body-font ">
  <div class="container mx-auto flex flex-wrap flex-col md:flex-row items-center">
    <nav class="flex lg:w-auto flex-wrap items-center text-base md:ml-auto font-body">
      <div class="mr-5 hover:text-gray-900"><%= link_to "マイページ", user_path(current_user.id) %></div>
      <div class="mr-5 hover:text-gray-900"><%= link_to "お気に入り", favorites_posts_path %></div>
