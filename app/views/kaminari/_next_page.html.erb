<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="next inline-flex items-center py-2 px-4 mr-4 text-sm font-medium font-body text-green-500 bg-white rounded-lg  hover:bg-green-100 hover:text-green-700 dark:bg-green-800 dark:border-green-700 dark:text-green-400 dark:hover:bg-green-700 dark:hover:text-white">
  <%= link_to_unless current_page.last?, t('view.pagination.next').html_safe, url, rel: 'next', remote: remote %>
</span>
