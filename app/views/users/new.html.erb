<div class=" top min-w-screen min-h-screen bg-gray-900 flex items-center justify-center px-5 py-5">
    <div class="bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden" style="max-width:1000px">
        <div class="md:flex w-full">
            <div class="hidden md:block w-1/2 bg-yellow-300 py-10 px-10">
              <%= image_tag "sunflower.png", class: "w-full h-full"%>
            </div>
            <div class="w-full md:w-1/2 py-10 px-5 md:px-10">
                <div class="text-center mb-10">
                  <h1 class="font-bold text-3xl text-gray-900 font-body"><%= t('.title') %></h1>
                  <p class= "font-body">Enter your information to register🌻</p>
                </div>
                <div>
                  <%= form_with model: @user, local: true do |form| %>
                    <div class="field flex -mx-3">
                      <div class="w-full px-3 mb-5">
                        <%= form.label :name, class: "text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                          </div>
                          <%= form.text_field :name, class: "w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-yellow-500", placeholder: "お好きなニックネーム" %>
                        </div>
                      </div>
                    </div>
                    <div class="field flex -mx-3">
                      <div class="w-full px-3 mb-5">
                        <%= form.label :email, class: "text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                          </div>
                          <%= form.text_field :email, class: "w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-yellow-500", placeholder: "email@example.com" %>
                        </div>
                      </div>
                    </div>
                    <div class="field flex -mx-3">
                      <div class="w-full px-3 mb-5">
                        <%= form.label :password, class: "text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                          </div>
                          <%= form.password_field :password, class: "w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-yellow-500", placeholder: "************" %>
                        </div>
                      </div>
                    </div>
                    <div class="field flex -mx-3">
                      <div class="w-full px-3 mb-12">
                        <%= form.label :password_confirmation, class: "text-xs font-semibold px-1" %>
                        <div class="flex">
                          <div class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                            </svg>
                          </div>
                            <%= form.password_field :password_confirmation, class: "w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2 border-gray-200 outline-none focus:border-yellow-500", placeholder: "************" %>
                        </div>
                      </div>
                    </div>
                    <div class="flex -mx-3">
                        <div class="w-full px-3 mb-5 text-center">
                          <button class="actions">
                            <%= form.submit class: "block w-full max-w-xs mx-auto bg-yellow-500 hover:bg-yellow-700 focus:bg-yellow-700 text-white rounded-lg px-3 py-3 font-semibold" %>
                          </button>
                        </div>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
