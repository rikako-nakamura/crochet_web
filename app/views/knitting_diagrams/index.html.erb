  <div class="flex flex-wrap">
    <% if @knitting_diagrams.present? %>
      <div class= "flex flex-shrink-0 rounded-lg object-cover object-center mb-4 mt-10">
        <% @knitting_diagrams.each do |knitting_diagram|%>
          <div id="knitting_diagrams-id-<%= knitting_diagram.id%>" class="flex justify-around mx-8">
            <div class= "square_outer1" style="background-color:<%= knitting_diagram.square_outer %>"></div>
            <div class= "square_center2 m-12" style="background-color:<%= knitting_diagram.square_center %>"></div>
            <div class= "square_inner3 m-24" style="background-color:<%= knitting_diagram.square_inner %>"></div>
