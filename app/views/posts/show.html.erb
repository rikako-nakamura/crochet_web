<div class="container px-5 py-24 mx-auto">
  <div class="flex flex-col w-full mb-10">
    <%= image_tag "tulips.png"%>
  <div>
  <section class="text-gray-600 body-font overflow-hidden">
    <div class="container px-5 py-20 mx-auto">
      <div class="lg:w-4/5 mx-auto flex flex-wrap">
        <%= image_tag @post.post_image_url, class: 'border border-green-300 shadow-2xl rounded-lg border-dashed border-2 lg:w-1/2 lg:h-1/2 md:h-36 object-cover object-center'%>
        <div class="md:w-1/2 lg:pl-24 items-center font-body">
          <div class="flex">
            <h1 class="text-gray-900 text-2xl mb-1 pt-3 font-body"><%= @post.user.name %>さんの作品</h1>
            <span class="rounded-lg bg-green-500 px-4 py-2 mr-3 inline-flex md:ml-3 text-sm my-1">
              <% if current_user %>
                <%= render 'favorite_button', post: @post %>
              <% else %>
                <%= link_to login_path method: :post do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                <%end%>
              <%end%>
            <span>
          </div>
          <div class="flex">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z" clip-rule="evenodd" />
            </svg>
            <p class="flex">を押すと後で見返せることができます。</p>
          </div>

          <div class="text-gray-600 lg:w-1/2 md:w-full mt-6 h-10 py-2">
            カテゴリ：<%= @post.category.name %>
          </div>

          <div class="text-gray-600 lg:w-1/2 md:w-full mt-6 h-10 py-2">
            イメージ：<%= @post.mood.name %>
          </div>

          <div class="text-gray-600 lg:w-1/2 md:w-full mt-6 h-10 py-2">
            かかった時間：<%= @post.finished_at %>
          </div>

          <div class="text-gray-600 lg:w-1/2 md:w-full mt-6 py-2">
            <% if @post.youtube_url.present? %>
              参考にしたYoutube：<br>
              <%= render 'shared/embed_youtube' %>
            <% else %>
              参考にしたYoutubeはありません
            <% end %>
          </div>

          <div class="text-left md:w-full font-body h-48 text-base outline-none text-gray-700 py-1 mt-6 resize-none leading-6 transition-colors duration-200 ease-in-out">
            <% if @post.body.present?%>
              ひとこと：<br><%= @post.body %>
            <% else %>
              ひとことはありません
            <% end %>
          </div>
          <%= link_to ("/posts") do %>
            <button class=" md:w-full px-4 py-2 mt-6 rounded-md text-sm font-body border-b-2 focus:outline-none focus:ring transition text-white bg-green-500 border-green-800 hover:bg-green-600 active:bg-green-700 focus:ring-green-300">
              投稿一覧に戻る 
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <div class="flex flex-col w-full ">
    <%= image_tag "tulips.png"%>
  </div>
</div>