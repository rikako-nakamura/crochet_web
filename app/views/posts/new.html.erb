<div>
  <h1 class="text-center text-green-500 text-6xl mt-40 mb-20"><%= t('.title') %></h1>
</div>

<div class="container flex w-64 flex-wrap justify-center mx-auto">
    <%= form_with model: @post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :category_id, 'カテゴリ' %>
        <%= f.select :category_id, {'バック': 1, 'コースター': 2, 'モチーフ': 3, 'グラニースクエア': 4, 'お花': 5}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>

      <div class="form-group">
        <%= f.label :mood_id, 'イメージ' %>
        <%= f.select :mood_id, {'かわいい': 1, 'かっこいい': 2, '統一感': 3, 'レトロ': 4}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>

      <div class="form-group">
        <%= f.label :post_image, t('.post_image') %>
        <%= f.file_field :post_image, onchange: 'previewImage()', accept: 'image/*' %>
        <%= f.hidden_field :post_image_cache %>
      </div>
      <div class='mt-3 mb-3'>
      <%= image_tag @post.post_image.url,
                  id: 'preview',
                  size: '300x200' %>
      </div>
      <div class="form-group">
        <%= f.label :finished_at, "作品にかかった時間はどのくらいですか？" %>
        <%= f.text_field :finished_at, placeholder: "(例)およそ1日" %>
      </div>

      <div class="form-group">
        <%= f.label :body, "ひとこと(任意)" %>
        <%= f.text_area :body %>
      </div>

      <button class="flex justify-center items-center bg-red-200 hover:bg-pink-500 text-green-500 py-2 px-4 bg-opacity: 1;" type="submit">
        <%= f.submit %>
      </button>
    <%end%>
</div>