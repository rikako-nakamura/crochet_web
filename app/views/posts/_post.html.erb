<section class="lg:w-1/4 text-gray-600 body-font">
  <div class="container px-5 py-12 mx-auto">
    <div class="flex flex-wrap -m-4">
      <div class="p-4  w-full">
				<div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
					<%= link_to post_path(post) do %>
						<%= image_tag post.post_image_url, class: 'lg:h-80 md:h-36 w-full object-cover object-center'%>
					<%	end %>
					<div class="p-6">
						<div class="flex">
							<div class="text-lg font-medium text-gray-900 mb-3 mr-3 font-body" id="post-id-<%= post.id %>">
								<%= "#{post.user.name}さんの作品"%>
							</div>
							<span class="text-gray-400 mr-3 inline-flex lg:ml-auto md:ml-0 ml-auto leading-none text-sm">
									<% if current_user %>
										<%= render 'favorite_button', post: post %>
									<% else %>
										<%= link_to login_path method: :post do %>
											<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
												<path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
											</svg>
										<%end%>
									<%end%>
							<span>
						</div>
						<div class="flex items-center flex-wrap ">
							<%= link_to post_path(post), class: 'text-green-500 inline-flex items-center md:mb-2 lg:mb-0 font-body' do%>
								詳しく見る
								<svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
									<path d="M5 12h14"></path>
									<path d="M12 5l7 7-7 7"></path>
								</svg>
							<% end %>
						</div>
					</div>
				</div>
      </div>
    </div>
  </div>
</section> 
