<div class="container px-5 py-24 mx-auto">
  <div class= "justify-center">
    <h1 class="text-center font-bold text-4xl m-8 text-green-500"><%= t('.title') %></h1>
  </div>

  <div class="container pt-3 ">
    <div class="col-lg-10 offset-lg-1 flex justify-end ">
      <%= form_with model: @search_posts_form, scope: :q, url: posts_path, method: :get do |f| %>

        <div class="inline-block relative w-44">
          <div class="border border-gray-300 rounded-full text-gray-600 h-10 pt-2 pl-5 pr-10 bg-white hover:border-gray-400 focus:outline-none appearance-none">
            <%= f.select :category_id, Category.pluck(:name, :id) , {include_blank: "カテゴリ"}%>
          </div>
        </div>

        <div class="inline-block relative w-32">
          <div class="border border-gray-300 rounded-full text-gray-600 h-10 pt-2 pl-5 pr-10 bg-white hover:border-gray-400 focus:outline-none appearance-none">
            <%= f.select :mood_id, Mood.pluck(:name, :id) , {include_blank: "イメージ"}%>
          </div>
        </div>

        <button class="inline-block relative justify-center items-center text-green-500 py-5 px-4 " type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      <%end%>
    </div>

    <div class= "flex justify-around flex-wrap">
      <% if @posts.present? %>
        <%= render @posts %>
      <% else %>
        <p><%= t('.no_result') %></p>
      <% end %>
    </div>
  </div>
</div>