<div>
  <h1 class="text-center text-green-500 text-6xl mt-40 mb-20"><%= t('.title') %></h1>
</div>

<div class="container flex w-64 flex-wrap justify-center mx-auto">
  <%= form_with url: login_path, local: true do |f| %>

    <div class="form-group">
      <%= f.label :email , User.human_attribute_name(:email) %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password , User.human_attribute_name(:password) %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="mt-4">
      <button class="text-green-500 hover:text-white hover:bg-pink-500 border border-pink-500 text-xs font-semibold rounded-full px-4 py-1 leading-normal">ログイン</button>
    </div>
  <% end %>

</div>